extends _layouts/base

include _modules/atoms/snap/snap
include _modules/atoms/keyboard/keyboard
include _modules/atoms/sticker/sticker
include _modules/molecules/camera/camera

include _modules/molecules/takepicture/takepicture

block content

  .page.show#start
    img(id="logo" src="../images/logo.png")
    img(id="snaptowin" src="../images/camera.png")
    
  .page#select
    img(class="toprightlogo" src="../images/logo.png")
    h1(class="cooperBlack") Choose Your Destination
    span Choose one out of the five destinations which EVA Air flies to as your theme:
    
    a(data-select="taipei")
      img(src="../images/choose_taipei.png")
    a(data-select="losangeles")
      img(src="../images/choose_losangeles.png")
    a(data-select="newyork")
      img(src="../images/choose_newyork.png")
    a(data-select="sanfrancisco")
      img(src="../images/choose_sanfrancisco.png")
    a(data-select="vancouver")
      img(src="../images/choose_vancouver.png")
  
  .takepicturecontainer.page
    img(class="toprightlogo" src="../images/logo.png")
    +takepicture()
    +camera()
    
  
  .page#addsticker
    img(class="toprightlogo" src="../images/logo.png")
    h1(class="cooperBlack")
     | Get Creative!
     br
     | Edit Your Photo
    
    .holdscreenshot
       #webcamimg
     
    +sticker({
      'city': 'sanfrancisco',
      'leftcolumn': ['1', '2', '3', '4'],
      'rightcolumn': ['5', '6', '7', '8']
      })
      
    +sticker({
      'city': 'taipei',
      'leftcolumn': ['1', '2', '3', '4'],
      'rightcolumn': ['5', '6', '7', '8']
      })
        
    +sticker({
      'city': 'newyork',
      'leftcolumn': ['1', '2', '3', '4'],
      'rightcolumn': ['5', '6', '7', '8']
      })
          
    +sticker({
      'city': 'losangeles',
      'leftcolumn': ['1', '2', '3', '4'],
      'rightcolumn': ['5', '6', '7', '8']
      })
            
    +sticker({
      'city': 'vancouver',
      'leftcolumn': ['1', '2', '3', '4'],
      'rightcolumn': ['5', '6', '7', '8']
      })
    
    .buttons
      button(class="retake cooperBlack") RETAKE
      button(class="confirm cooperBlack") DONE!
    
    .modal
      .modal-background
      .modal-content
        h1 Enter your email address
        p Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
        +keyboard()
        
  .page#thanks
    img(class="toprightlogo" src="../images/logo.png")
    h1 Thank you!!! Hope you had enjoyed yourself!
    button start again
    
    
  audio
    source(src="../assets/snap.mp3" type="audio/mpeg")
    
