mixin sticker(spec)
  - spec = spec || {}
  - spec.__class = spec.__class || ''
  - imagepath = '../images'
  - city = spec.city

  .sticker(class="sticker-#{city}")
    h2 
      | CHOOSE
      br 
      | STICKER
    
    .column
      each leftimg in spec.leftcolumn
        img(class="image#{leftimg} left" src="#{imagepath}/#{city}/#{leftimg}.png")
    .column
      each rightimg in spec.rightcolumn
        img(class="image#{rightimg} right" src="#{imagepath}/#{city}/#{rightimg}.png")
